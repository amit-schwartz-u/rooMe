<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apartment_searcher_tabs_classes.EditProfileApartmentSearcher">

    <ImageView
        android:id="@+id/profile_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.1"
        android:src="@drawable/house_back_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Edit Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_missingPhoto"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/no_profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageButton
        android:id="@+id/ib_addPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="292dp"
        android:src="@drawable/addphotobutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_missingPhoto" />

    <ScrollView
        android:id="@+id/sv_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_addPhoto"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_enterFirstName"
                android:layout_width="282dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:ellipsize="none"
                android:ems="10"
                android:fontFamily="@font/walkway_bold"
                android:gravity="start|center_horizontal"
                android:hint="First Name"
                android:inputType="textLongMessage|textPersonName"
                android:paddingStart="12dp"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout" />

            <EditText
                android:id="@+id/et_enterLastName"
                android:layout_width="282dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:ems="10"
                android:fontFamily="@font/walkway_bold"
                android:gravity="start|center_horizontal"
                android:hint="Last Name"
                android:inputType="textLongMessage|textPersonName"
                android:paddingStart="12dp"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout"
                app:layout_constraintTop_toBottomOf="@id/et_enterFirstName" />

            <EditText
                android:id="@+id/et_enterAge"
                android:layout_width="282dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:ems="2"
                android:fontFamily="@font/walkway_bold"
                android:gravity="start|center_horizontal|left"
                android:hint="Age"
                android:inputType="numberSigned"
                android:paddingStart="12dp"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout"
                app:layout_constraintTop_toBottomOf="@+id/et_enterLastName" />

            <RadioGroup
                android:id="@+id/radioGroup_choose_gender"
                android:layout_width="282dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:gravity="center|start|right|top"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout"
                app:layout_constraintTop_toBottomOf="@id/tv_gender_label">

                <TextView
                    android:id="@+id/tv_gender_label"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|left"
                    android:layout_weight="1"
                    android:fontFamily="@font/walkway_bold"
                    android:gravity="start|left"
                    android:paddingStart="12dp"
                    android:text="I am a:"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_btn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:fontFamily="@font/walkway_bold"
                    android:text="Lady"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHighlight="#FFC107"
                    android:textColorLink="#4CAF50"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radio_btn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:fontFamily="@font/walkway_bold"
                    android:paddingEnd="12dp"
                    android:text="Gentleman"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorLink="#4CAF50"
                    android:textSize="18sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="282dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:ems="10"
                android:fontFamily="@font/walkway_bold"
                android:gravity="start|center_horizontal"
                android:hint="Phone Number"
                android:inputType="numberSigned"
                android:paddingStart="12dp"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_choose_gender" />

            <EditText
                android:id="@+id/et_bio"
                android:layout_width="285dp"
                android:layout_height="220dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_et_back"
                android:fontFamily="@font/walkway_bold"
                android:gravity="start|center_horizontal"
                android:hint="Say something about yourself..."
                android:inputType="textLongMessage|textImeMultiLine"
                android:paddingStart="12dp"
                app:layout_constraintStart_toStartOf="@+id/details_linear_layout"
                app:layout_constraintTop_toBottomOf="@+id/et_phoneNumber" />

            <Button
                android:id="@+id/btn_save_profile_as"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:text="Save">
            </Button>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
