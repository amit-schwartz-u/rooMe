<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorPrimaryDark">@color/peach</item>
        <item name="colorAccent">@color/peach</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="roome_logo" parent="TextAppearance.AppCompat">

        <item name="android:textSize">
            74sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

        <item name="android:shadowColor">
            #40000000
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            6
        </item>

        <item name="android:shadowRadius">
            6
        </item>

    </style>
    <style name="SwipeFling">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>

</resources>
